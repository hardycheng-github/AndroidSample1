<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_start_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_service"
        app:layout_constraintBottom_toTopOf="@+id/btn_stop_service"
        app:layout_constraintEnd_toEndOf="@+id/btn_stop_service"
        app:layout_constraintStart_toStartOf="@+id/btn_stop_service"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_stop_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop_service"
        android:background="@drawable/btn_style_2"
        app:layout_constraintBottom_toTopOf="@+id/btn_bind_service"
        app:layout_constraintEnd_toEndOf="@+id/btn_bind_service"
        app:layout_constraintStart_toStartOf="@+id/btn_bind_service"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_service" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_bind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bind_service"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_style_1_nor"
        app:layout_constraintBottom_toTopOf="@+id/btn_unbind_service"
        app:layout_constraintEnd_toEndOf="@+id/btn_unbind_service"
        app:layout_constraintStart_toStartOf="@+id/btn_unbind_service"
        app:layout_constraintTop_toBottomOf="@+id/btn_stop_service" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_unbind_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unbind_service"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_style_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_bind_service" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <padding android:right="10dp" android:left="10dp" android:top="10dp" android:bottom="10dp"></padding>
            <stroke android:width="4dp" android:color="@color/black"></stroke>
            <solid android:color="#999999"></solid>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
    <item>
        <shape>
            <padding android:right="10dp" android:left="10dp" android:top="10dp" android:bottom="10dp"></padding>
            <stroke android:width="2dp" android:color="@color/black"></stroke>
            <gradient android:startColor="#666666" android:endColor="#FFFFFF" android:angle="90"></gradient>
            <corners android:radius="5dp"></corners>
        </shape>
    </item>
</selector>